    <description>Home project for exploring java</description>
  <packaging>pom</packaging>

	<properties>
		<java.version>11</java.version>
      <sonar.projectKey>cdrommens_comicosmosis</sonar.projectKey>
      <sonar.organization>cdrommens</sonar.organization>
      <sonar.host.url>https://sonarcloud.io</sonar.host.url>
      <spring-cloud.version>2020.0.2</spring-cloud.version>
        <jsoup.version>1.12.1</jsoup.version> <!-- //TODO : latest is 1.13.1 -->
      <apache.commons.lang>3.11</apache.commons.lang>
      <commons.io.version>2.8.0</commons.io.version>
  </properties>

  <modules>
